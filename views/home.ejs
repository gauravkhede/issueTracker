<!DOCTYPE html>
<html>
<head>
    
    <title>Home Page | IssueTracker</title>
    <link rel="stylesheet" href="/css/home-project.css">
</head>
<body>
    hi
    <form action="/filterByProjectAuthor" method="post">
        <select name="project_author" id="">
        <% for(let p of projects){ %>
            <option value="<%= p.author._id %>"><%= p.author.name %></option>
        <% } %>
    </select>
    <input type="submit" value="submit">
    </form>
    <form action="/multipleFilter" method="post">
        Label of the Bug: 
        <select name="project_label" id="">
        <% for(let l of labels){ %>
            <option value="<%= l.labels %>"><%= l.labels %></option>
        <% } %>
        </select>
        Author of the Bug:
        <select name="project_bugAuthor" id="">
            <% for(let p of projects){ %>
                <% for(let b of p.bugs){ %>
                <option value="<%= b.author.name%>"> <%= b.author.name%></option>
                <% } %>
                <% } %>
        </select>
        title of the bug:
        <select name="project_bug" id="">
            <% for(let p of projects){%>
                <% for(let b of p.bugs){ %>
                <option value="<%= b.title %>"> <%= b.title %></option>
                <% } %>
                 
                <% } %>
        </select>
    <input type="submit" value="submit">
    </form>
    <form action="/filterByProject" method="post">
        Search By Project name:
        <!-- <select name="project_name" id="">
        <% for(let project of projects){ %>
                <option value="<%=project.name %>"><%= project.name %> </option>
        
            <% } %>
        </select> -->
        <input type="text" name="project_name">
        Search By Project Description:
        <input type="text" name="project_description">
        <input type="submit" value="submit">

        
    </form>
    
   
    <form action="/createProject" method="post">
        <input type="text" name="name" required placeholder="Enter Your Project Name">
        <input type="text" name="description" required placeholder="Enter Project Description">
        <input type="text" name="author" required placeholder="Enter Author's name">
        <input type="submit" name="submit" value="submit">
    </form>
    <% for(let project of projects ){ %>
        name:<%= project.name %> <br>
        description: <%= project.description %> <br>
        author: <%= project.author.name %> <br> <br>

        
        <form action="/project" method="post">
            <input type="hidden" name="name" value="<%= project.name %>">
            <input type="hidden" name="project_id" value="<%= project._id%>">
            <input type="submit" name="submit" value="Click on project" id="project-submit">
        </form>

    <% } %>
</body>
</html>